#include <stdio.h>
#include <locale.h>

void num();

int main() {
  setlocale(LC_ALL, "Portuguese_Brazil");
  
  num();
}

void num() {
  int n;
  
  printf("Digite um valor: ");
  scanf("%d", &n);
  
  if(n > 0) {
    printf("O número é positivo");
  } else if(n < 0) {
    printf("O número é negativo");
  }
}
