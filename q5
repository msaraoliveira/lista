#include <stdio.h>
#include <locale.h>

void PouN(int num);

int main() {
  setlocale(LC_ALL, "Portuguese_Brazil");
  
  float n;
  
  printf("Digite um valor: ");
  scanf("%f", &n);
  
  PouN(n);
}

void PouN(int num) {
  
  if(num > 0) {
    printf("\nO número é positivo");
  } else {
    printf("\nO número é negativo");
  }
}
